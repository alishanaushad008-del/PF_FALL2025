#include <stdio.h>

int main() {
    int pages_per_report, people, extra_copies = 5;
    int total_pages, reams_to_order;

    printf("Enter number of pages in the report: ");
    scanf("%d", &pages_per_report);

    printf("Enter number of people attending the meeting: ");
    scanf("%d", &people);

    total_pages = pages_per_report * (people + extra_copies);

    reams_to_order = total_pages / 500;

    if (total_pages % 500 != 0) {
        reams_to_order = reams_to_order + 1;
    }

    printf("\nTotal pages needed: %d", total_pages);
    printf("\nReams to order (whole number): %d\n", reams_to_order);

}